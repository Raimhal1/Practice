@model IEnumerable<Shop.Models.Store.Product>

@{
    ViewData["Title"] = "Каталог";
}

@section css {
    <link rel="stylesheet" href="~/css/catalog.css">
}
@section scripts {
    <script src="~/js/footer.js" defer></script>
    <script src="~/js/header.js" defer></script>
    <script src="~/js/dropdown.js" defer></script>
}

<partial name="_Header" />

<main class="main">
    <div class="container">
        <div class="page">
                <div class="page__row">
                    <div class="page__link">
                        <a href="/">Главная</a>
                    </div>
                    <div class="page__arrow">
                        <svg class="svg_1" width="7" height="10" viewBox="0 0 7 10" fill="none"
                             xmlns="http://www.w3.org/2000/svg">
                            <path d="M3.88906 5L0 1.11094L1.11094 0L6.11094 5L1.11094 10L0 8.88906L3.88906 5Z"
                                  fill="white"/>
                        </svg>
                    </div>
                    <div class="page__link">Каталог</div>
                </div>
            </div>
            <div class="content">
                <div class="content__row">
                    <aside class="aside">
                        <div class="aside__title">Каталог</div>
                        <div class="aside__link">
                            <a href="">New</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Bestsellers</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Верхняя одежда</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Тренчи</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Пальто</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Пуховики и жилеты</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Костюмы</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Жакеты</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Платья</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Рубашки и блузы</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Юбки</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Футболки и топы</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Аксессуары</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Sale</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Summer</a>
                        </div>
                        <div class="aside__link">
                            <a href="">Посмотреть всё</a>
                        </div>
                    </aside>
                    <div class="catalog">
                    <div class="catalog__mobileAside">
                            <span>Каталог</span>
                            <svg width="11" height="7" viewBox="0 0 11 7" fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M5.01855 3.88906L8.90762 -4.85606e-08L10.0186 1.11094L5.01855 6.11093L0.0185546 1.11094L1.12949 -3.88553e-07L5.01855 3.88906Z"
                                      fill="white"/>
                            </svg>
                        </div>
                    <div class="catalog__mobileFilters">
                            <div class="catalog__filterContent">
                                <span>Фильтры</span>
                                <svg width="11" height="13" viewBox="0 0 11 13" fill="none"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path d="M6.75 7.75V11.5L4.25 12.75V7.75L0.5 2.125V0.875H10.5V2.125L6.75 7.75ZM2.0025 2.125L5.5 7.37125L8.9975 2.125H2.0025Z"
                                          fill="#E0BEA2"/>
                                </svg>
                            </div>
                            <div class="catalog__filterArrow">
                                <svg class="svg_1" width="11" height="7" viewBox="0 0 11 7" fill="none"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path d="M5.01855 3.88906L8.90762 -4.85606e-08L10.0186 1.11094L5.01855 6.11093L0.0185546 1.11094L1.12949 -3.88553e-07L5.01855 3.88906Z"
                                          fill="white"/>
                                </svg>
                            </div>
                        </div>
                    <div class="catalog__filters">
                            <div class="dropdown__row">
                                <div class="dropdown">
                                    <ul class="dropdown__list">
                                        <li class="dropdown__active">Размер</li>
                                        <li>XXS</li>
                                        <li>XS</li>
                                        <li>S</li>
                                        <li>M</li>
                                        <li>L</li>
                                    </ul>
                                </div>
                                <div class="dropdown">
                                    <ul class="dropdown__list">
                                        <li class="dropdown__active">Цвет</li>
                                        <li>White</li>
                                        <li>Blue</li>
                                        <li>Cream</li>
                                    </ul>
                                </div>
                                <div class="dropdown">
                                    <ul class="dropdown__list">
                                        <li class="dropdown__active">Цена</li>
                                        <li>From smallest</li>
                                        <li>From biggest</li>
                                    </ul>
                                </div>
                                <div class="dropdown">
                                    <ul class="dropdown__list">
                                        <li class="dropdown__active">Сортировать по</li>
                                        <li>Popularity</li>
                                        <li>Sales</li>
                                        <li>Fashion</li>
                                        <li>New</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    <div class="items">
                        @foreach (var item in Model)
                        {
                            <a href="/product/view/@item.Id" class="items__card">
                                <div class="items__img">
                                    <img src="~/img/product/@item.ImgName" alt="">
                                    <div class="items__like">
                                        <svg width="25" height="24" viewBox="0 0 25 24" fill="none"
                                         xmlns="http://www.w3.org/2000/svg">
                                            <path d="M12.501 2.16119C15.4372 -0.475012 19.9746 -0.387513 22.8033 2.44618C25.6308 5.28113 25.7283 9.79605 23.0983 12.741L12.4985 23.3558L1.90122 12.741C-0.728729 9.79605 -0.62998 5.27363 2.19622 2.44618C5.02741 -0.383763 9.55608 -0.478762 12.501 2.16119ZM21.0334 4.2124C19.1584 2.33494 16.1335 2.25869 14.171 4.02115L12.5023 5.51863L10.8323 4.0224C8.86359 2.25744 5.8449 2.33494 3.96493 4.2149C2.10247 6.07737 2.00872 9.05856 3.72494 11.0285L12.4998 19.8171L21.2746 11.0298C22.9921 9.05856 22.8983 6.08112 21.0334 4.2124Z"
                                              fill="white" />
                                        </svg>
                                    </div>
                                </div>
                                <div class="items__info">
                                    <div class="items__title">
                                        @item.Name
                                    </div>
                                    <div class="items__price">@item.Price грн</div>
                                    <div class="items__sizes">@item.Sizes</div>
                                    <div class="items__colors">
                                        <div class="color color_1"></div>
                                        <div class="color color_2"></div>
                                        <div class="color color_3"></div>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<partial name="_Footer" />